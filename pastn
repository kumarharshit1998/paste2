// DB role
userClaims.Any(c => c.Type == ClaimTypes.Role && c.Value == "DBROLE: LMCOMRO")

// LOB
userClaims.Any(c => c.Type == ClaimTypes.Role && c.Value == "LOB: CON")

// Permission
userClaims.Any(c => c.Type == ClaimTypes.Role && c.Value == "CanApprvShortSale")

