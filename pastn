<div class="radio-group">
    <input type="radio" name="AssignmentType" value="Assign to me"
           @(Model.AssignmentType == "Assign to me" ? "checked" : "")
           @(userClaims.Any(claim => claim.Type == ClaimTypes.Role && claim.Value == "CanSelfAssign") ? "" : "disabled") /> Assign to Me

    <input type="radio" name="AssignmentType" value="No Assignment"
           @(Model.AssignmentType == "No Assignment" ? "checked" : "")
           @(userClaims.Any(claim => claim.Type == ClaimTypes.Role && claim.Value == "CanSelfAssign") ? "" : "checked disabled") /> No Assignment
</div>
