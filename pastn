ViewData["UserClaims"] = HttpContext.User.Claims;
return View(model);





.cshtml
@using System.Security.Claims
@{
    IEnumerable<Claim> userClaims = (IEnumerable<Claim>)ViewData["UserClaims"];
}



radio butot
<div class="radio-group">
    <input type="radio" name="AssignmentType" value="Assign to me"
           @(Model.AssignmentType == "Assign to me" ? "checked" : "")
           @(userClaims.Any(c => c.Type == ClaimTypes.Role && c.Value == "CanSelfAssign") ? "" : "disabled") /> Assign to Me

    <input type="radio" name="AssignmentType" value="No Assignment"
           @(Model.AssignmentType == "No Assignment" ? "checked" : "")
           @(userClaims.Any(c => c.Type == ClaimTypes.Role && c.Value == "CanSelfAssign") ? "" : "checked disabled") /> No Assignment
</div>





