<script>
    function ValidateAcctNum() {
        var acct = document.getElementById("AcctNum");
        if (!acct.value) {
            alert("Please enter an account number to lookup");
            return false;
        }
    }

    function ValidateForm() {
        var fields = [
            { id: "AcctNum", message: "You must enter an account number" },
            { id: "ssn", message: "You must enter a Social Security Number or Tax ID" },
            { id: "bal", message: "You must enter a Balance Amount" },
            { id: "loanline", message: "You must select Loan or Line", select: true },
            { id: "lienpos", message: "You must select the Lien Position", select: true },
            { id: "priFName", message: "You must enter a Primary First Name" },
            { id: "priLName", message: "You must enter a Primary Last Name" },
            { id: "priAdd1", message: "You must enter a Primary Address" },
            { id: "priCity", message: "You must enter a Primary City" },
            { id: "prizip", message: "You must enter a Primary Zip Code" },
            { id: "priAC", message: "You must enter a Primary Area Code" },
            { id: "priHp", message: "You must enter a Primary Home Telephone" }
        ];

        for (var i = 0; i < fields.length; i++) {
            var field = document.getElementById(fields[i].id);
            if (!field.value || (fields[i].select && field.value === "Select")) {
                alert(fields[i].message);
                return false;
            }
        }
    }
</script>

<div class="clsSearchTable">
    <h2 class="clsFormHeader" style="text-align:center;">Manual Add Prospect</h2>

    <div>
