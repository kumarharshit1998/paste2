var dbRoleClaim = HttpContext.User.Claims
    .FirstOrDefault(c => c.Type == ClaimTypes.Role && c.Value.StartsWith("DBROLE: "));

if (dbRoleClaim != null)
{
    ViewData["DbRole"] = dbRoleClaim.Value.Replace("DBROLE: ", "").Trim();
}


@{
    var dbRole = ViewData["DbRole"] as string;
}

<input type="hidden" name="DbRole" value="@dbRole" />
