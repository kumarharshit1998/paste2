public async Task<IActionResult> SearchClient([FromBody] string accountNumber)
{
    if (string.IsNullOrEmpty(accountNumber))
        return Json(new { error = "Account number is required" });

    // Call SOAP API
    var soapResponse = await _cifservice.GetClientDataAsync(accountNumber);

    if (soapResponse == null)
        return Json(new { error = "No client data found" });

    // Parse XML Response
    XDocument xmlDoc = XDocument.Parse(soapResponse);
    XNamespace ns0 = "http://xmlns.example.com/unique/default/namespace/1115236122168"; // Update namespace from API response

    var clientRecord = xmlDoc.Descendants(ns0 + "ClientRecord").FirstOrDefault();
    if (clientRecord == null)
        return Json(new { error = "No client data found" });

    // Extract Data from XML
    var ssn = clientRecord.Element(ns0 + "SSN-TIN")?.Value ?? "";
    var nameLine1 = clientRecord.Element(ns0 + "NameLine1")?.Value ?? "";
    var addressDetail = clientRecord.Element(ns0 + "AddressDetail");
    var address1 = addressDetail?.Element(ns0 + "Address1")?.Value ?? "";
    var address2 = addressDetail?.Element(ns0 + "Address2")?.Value ?? "";
    var city = addressDetail?.Element(ns0 + "City")?.Value ?? "";

    // Return JSON Response
    return Json(new
    {
        SSN = ssn,
        PrimaryfirstName = nameLine1,
        PrimaryAdress = address1,
        PrimaryAdressLine2 = address2,
        PrimaryCity = city
    });
}
